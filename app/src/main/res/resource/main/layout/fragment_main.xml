<?xml version="1.0" encoding="utf-8"?><android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:id="@+id/drawer_layout"    android:layout_width="match_parent"    android:layout_height="match_parent">    <android.support.constraint.ConstraintLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_gravity="start"        android:background="@color/colorPrimaryDark"        android:gravity="center"        android:orientation="horizontal">        <ListView            android:id="@+id/menu_list"            android:layout_width="match_parent"            android:layout_height="wrap_content" />    </android.support.constraint.ConstraintLayout>    <android.support.constraint.ConstraintLayout        android:layout_width="match_parent"        android:layout_height="match_parent">        <com.toaok.study.module.home.widget.StopSlidViewPager            android:id="@+id/ssvp_home"            android:layout_width="0dp"            android:layout_height="0dp"            app:layout_constraintBottom_toTopOf="@id/include_line"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent" />        <include            android:id="@+id/include_line"            layout="@layout/view_line"            android:layout_width="0dp"            android:layout_height="0.5dp"            app:layout_constraintBottom_toTopOf="@id/footbar"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toStartOf="parent" />        <include            android:id="@+id/footbar"            layout="@layout/view_footbar_main"            android:layout_width="0dp"            android:layout_height="wrap_content"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toStartOf="parent" />    </android.support.constraint.ConstraintLayout></android.support.v4.widget.DrawerLayout>