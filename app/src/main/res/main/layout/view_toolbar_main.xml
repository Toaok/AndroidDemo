<?xml version="1.0" encoding="utf-8"?><android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    app:elevation="0dp">    <android.support.v7.widget.Toolbar        android:id="@+id/toolbar"        android:layout_width="match_parent"        android:layout_height="?attr/actionBarSize"        app:contentInsetStart="0dp">        <TextView            android:id="@+id/text_title"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:textColor="@color/colorWhite"            android:textSize="18sp"            android:visibility="visible" />        <TextView            android:id="@+id/text_right"            style="@android:style/Widget.ActionButton"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="right"            android:paddingLeft="16dp"            android:paddingRight="16dp"            android:text="abc"            android:textColor="@color/colorWhite"            android:textSize="@dimen/font_size_16"            android:visibility="gone"            tools:ignore="RtlHardcoded" />        <ImageButton            android:id="@+id/btn_right"            style="@android:style/Widget.ActionButton"            android:layout_width="wrap_content"            android:layout_gravity="right"            android:layout_height="wrap_content"            android:contentDescription="@string/right_button"            android:visibility="invisible" />    </android.support.v7.widget.Toolbar></android.support.design.widget.AppBarLayout>