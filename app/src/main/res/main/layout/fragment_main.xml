<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="match_parent">    <com.toaok.study.module.home.widget.NoScrollViewPager        android:id="@+id/ssvp_home"        android:layout_width="0dp"        android:layout_height="0dp"        app:layout_constraintBottom_toTopOf="@id/include_line"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent"/>    <include        android:id="@+id/include_line"        layout="@layout/view_line"        android:layout_width="0dp"        android:layout_height="0.5dp"        app:layout_constraintBottom_toTopOf="@id/footbar"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent" />    <include        android:id="@+id/footbar"        layout="@layout/view_footbar_main"        android:layout_width="0dp"        android:layout_height="wrap_content"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent" /></android.support.constraint.ConstraintLayout>